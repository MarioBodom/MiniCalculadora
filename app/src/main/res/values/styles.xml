<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="tableRows">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="botones_general">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">34sp</item>
    </style>
    <style name="botones_operaciones" parent="botones_general">
        <item name="android:background">@color/operaciones</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="resultado">
        <item name="android:textSize">50sp</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textColor">@color/letras</item>
        <item name="android:background">@color/resultado</item>
    </style>
</resources>